<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la actividad -->
    <TextView
        android:id="@+id/tvTituloAgregarAsignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Asignatura"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Campo para ingresar el nombre de la asignatura -->
    <EditText
        android:id="@+id/edtNombreAsignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Asignatura"
        android:inputType="text" />

    <!-- Botón para guardar la asignatura -->
    <Button
        android:id="@+id/btnGuardarAsignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Asignatura"
        android:layout_marginTop="24dp" />
</LinearLayout>
